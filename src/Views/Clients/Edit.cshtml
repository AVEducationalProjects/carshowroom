@using CarShowRoom.Models;
@model CarShowRoom.Models.Client

@{
    ViewData["Title"] = "Изменить клиента";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-8"> <h4> @ViewData["Title"] </h4></div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-6">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label">Фамилия</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label">Имя</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MiddleName" class="control-label">Отчество</label>
                        <input asp-for="MiddleName" class="form-control" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label">Адрес</label>
                        <textarea asp-for="Address" class="form-control"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Сохранить" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label">Телефон</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Stage" class="control-label">Стадия</label>
                        <select asp-for="Stage" asp-items="Html.GetEnumSelectList<Stage>()" class="form-control"></select>
                        <span asp-validation-for="Stage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AccountId" class="control-label">Аккаунт-менеджер</label>
                        <select asp-for="AccountId" asp-items="ViewBag.Accounts" class="form-control"> </select>
                        <span asp-validation-for="AccountId" class="text-danger"></span>
                    </div>
                </div>
            </form>
        </div>

        <div>
            <a asp-action="Index">Назад</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
