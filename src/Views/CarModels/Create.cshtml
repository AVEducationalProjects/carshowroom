@using CarShowRoom.Models;
@model CarShowRoom.Models.CarModel

@{
    ViewData["Title"] = "Новая марка автомобиля";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-8"> <h4> @ViewData["Title"] </h4></div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="VendorId" class="control-label">Производитель</label>
                        <select asp-for="VendorId" asp-items="ViewBag.Vendors" class="form-control"> </select>
                        <span asp-validation-for="VendorId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Название</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EngineCapacity" class="control-label">Мощность</label>
                        <input asp-for="EngineCapacity" class="form-control" />
                        <span asp-validation-for="EngineCapacity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EngineType" class="control-label">Тип двигателя</label>
                        <select asp-for="EngineType" asp-items="Html.GetEnumSelectList<EngineType>()" class="form-control"></select>
                        <span asp-validation-for="EngineType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DriveUnitType" class="control-label">Тип привода</label>
                        <select asp-for="DriveUnitType" asp-items="Html.GetEnumSelectList<DriveUnitType>()" class="form-control"></select>
                        <span asp-validation-for="DriveUnitType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TransmissionType" class="control-label">Коробка передач</label>
                        <select asp-for="TransmissionType" asp-items="Html.GetEnumSelectList<TransmissionType>()" class="form-control"></select>
                        <span asp-validation-for="TransmissionType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Добавить" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Назад</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
